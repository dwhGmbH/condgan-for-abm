{
    "scenario":"synthetic_sinewave",
    "data":{
      "dataFile":"../data/trainingSet_synthetic_sinewave.pickle",
      "parameterSpace":[
		[
            -1,
            1
         ],
         [
            0,
            1.0
         ]
      ],
      "valueSpace":[-2.5,2.5]
   },
      "resultFolder": "../results",
   "generatorNetwork":{
          "sequence":[3, 64, 64, 1],
          "dropout":0.0,
          "finishSigmoid":false
      },
      "criticNetwork":{
          "sequence":[3, 64, 64, 1],
          "dropout":0.0,
          "finishSigmoid":false
      },
   "learning":{
      "lossFunction":{
         "id":"WASSERSTEIN_GP",
         "gradientPenaltyFactor":10,
         "clampThreshold":0.01
      },
      "batchSize":512,
      "epochs": 1000,
      "learningRate":{
         "initial":0.0001    
       }
	  },
   "convergenceMetric": {
      "id": "MIXED",
      "updateInterval": 10,
      "stoppingThreshold": 0.00001
   },
   "consoleLog":{
      "updateInterval":10
   },
   "snapshotExport": {
      "updateInterval":10
   },
   "visualisation":{
      "updateInterval":10,
      "views":[
         {"parameters":[null,0.0],"radius":0.01},
         {"parameters":[0.0,null],"radius":0.01},
         {"parameters":[0.0,0.0],"radius":0.05},
         {"parameters":[null,0.5],"radius":0.01},
         {"parameters":[1.0,null],"radius":0.01},
         {"parameters":[1.0,1.0],"radius":0.05},
         {"parameters":[null,1.0],"radius":0.01},
         {"parameters":[0.0,1.0],"radius":0.05}
      ]
   }
}